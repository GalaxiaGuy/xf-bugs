<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:bug="clr-namespace:Bug"
    x:Class="Bug.CollectionViewEffectPage">
    <CollectionView>
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type x:String}">
                <x:String>A</x:String>
                <x:String>B</x:String>
                <x:String>C</x:String>
                <x:String>D</x:String>
                <x:String>E</x:String>
                <x:String>F</x:String>
                <x:String>G</x:String>
            </x:Array>
        </CollectionView.ItemsSource>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Label Text="Effect" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                    <Label.Effects>
                        <bug:SimpleEffect />
                    </Label.Effects>
                </Label>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
